
@{
    ViewData["Title"] = "SavedDoctors";
}

@model IEnumerable<TrackDr.Models.SingleDoctor>

<h1>Saved Doctors</h1>

<table class="table">
    <tr>
        <th>Name:</th>
        <th>More Details:</th>
        <th>Delete:</th>
    </tr>

    @foreach (var doctor in Model)
    {
             System.Threading.Thread.Sleep(500);
        <tr>
            <td>@doctor.data.profile.first_name</td>

            @{string doctorId = doctor.data.uid;}
            <td>@Html.ActionLink("More Details", "DoctorDetails", "Home", new { doctorId }, htmlAttributes: new { target = "_blank" })</td>
            <td>@Html.ActionLink("Delete", "DeleteDoctor", new { doctorId })</td>
        </tr>
    }
</table>