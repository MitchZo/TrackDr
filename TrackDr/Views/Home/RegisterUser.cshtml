
@{
    ViewData["Title"] = "RegisterUser";
}

@model  TrackDr.Models.Parent 
 
<h1>Additional Information</h1>

<form action="/Home/RegisterUser" method="post">

    <p>@Html.ValidationSummary(false,"",new { @class = "text-danger" })</p>
    <input type="text" name="HouseNumber" placeholder="House Number" value="@Model.HouseNumber" />
    <input type="text" name="Street" placeholder="Street" value="@Model.Street" />
    <input type="text" name="Street2" placeholder="Street" value="@Model.Street2"/>
    <input type="text" name="City" placeholder="City" value="@Model.City"/>
    <div class="select" style="width: 188px;">
        @Html.DropDownListFor(m => m.State, new SelectList(Enum.GetValues(typeof(Parent.StateAbbreviations))), "State", new { @class = "form-control" })
    </div>
    <input type="text" name="ZipCode" placeholder="Zip Code" value="@Model.ZipCode"/>
    <input type="submit" name="Submit" />
</form>